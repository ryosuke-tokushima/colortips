<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_post_path(@post), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_post_path(@post), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:id) %></th>
          <td><%= @post.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:user_name) %></th>
          <td><%= @post.user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:body) %></th>
          <td><%= @post.body %></td>
        </tr>
        <% @post.images.each do |image| %>
            <tr>
              <th scope="row"><%= Post.human_attribute_name(:image) %></th>
              <td><%= image_tag image.url %></td>
            </tr>
        <% end %> 
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:color_palette) %></th>
          <td>
          <div class="row"> 
            <div class="color-palette">
              <% @post.color_palette.colors.each do |color| %>
                  <div class="color-row" style="width: 28px; height: 10px; background-color:<%= color.closest_palette_color_html_code %>"></div>
              <% end %>
            </div>
          </div>
          </td>
        </tr>         
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:created_at) %></th>
          <td><%= l @post.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>